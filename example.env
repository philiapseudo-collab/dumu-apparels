# Dumu Apparels - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# ============================================
# Meta/Instagram Configuration
# ============================================
# Get these from Meta for Developers dashboard
# https://developers.facebook.com/
VERIFY_TOKEN=your_verify_token_here
PAGE_ACCESS_TOKEN=your_page_access_token_here
INSTAGRAM_ACCOUNT_ID=your_instagram_account_id_here

# ============================================
# OpenAI Configuration
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# ============================================
# Database Configuration
# ============================================
# Railway Postgres URL format:
# postgresql+asyncpg://user:password@host:port/database
# Example: postgresql+asyncpg://postgres:password@containers-us-west-123.railway.app:5432/railway
DATABASE_URL=postgresql+asyncpg://user:password@host:port/database

# ============================================
# Payment Providers - IntaSend (Primary)
# ============================================
# Get these from IntaSend dashboard
# https://intasend.com/
INTASEND_PUBLIC_KEY=ISPubKey_your_public_key_here
INTASEND_SECRET_KEY=ISSecretKey_your_secret_key_here

# ============================================
# Payment Providers - PesaPal (Secondary/Fallback)
# ============================================
# Get these from PesaPal dashboard
# https://developer.pesapal.com/
PESAPAL_CONSUMER_KEY=your_pesapal_consumer_key_here
PESAPAL_CONSUMER_SECRET=your_pesapal_consumer_secret_here

# ============================================
# Optional Application Settings
# ============================================
# Application name (default: Dumu Apparels Instagram Bot)
APP_NAME=Dumu Apparels Instagram Bot

# Application version (default: 1.0.0)
APP_VERSION=1.0.0

# Debug mode - enables auto-reload and verbose logging (default: False)
# Set to True for development, False for production
DEBUG=False

# Payment link timeout in minutes (default: 15)
# Payment links expire after this duration
PAYMENT_LINK_TIMEOUT=15

# Currency code (default: KES - Kenyan Shillings)
CURRENCY=KES

